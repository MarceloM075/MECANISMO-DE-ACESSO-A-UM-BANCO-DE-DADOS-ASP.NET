@model Pessoa

@{
    ViewData["Title"] = "Apagar dados";
}

<div class="text-center">
    <h1>Realmente deseja apagar os dados de @Model.Nome, <br />CPF: @Model.Cpf?</h1>
</div>

<div class="flex-column text-center">
    <br />
    <a class="btn btn-primary mx-2" asp-action="ApagarDoDB" asp-controller="Pessoas" asp-route-id="@Model.Id" role="button">Confirmar</a>
    <a class="btn btn-danger mx-2" asp-action="Index" asp-controller="Pessoas" role="button">Cancelar</a>
</div>